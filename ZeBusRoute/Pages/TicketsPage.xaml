<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ZeBusRoute.ViewModels"
             xmlns:models="clr-namespace:ZeBusRoute.Models"
             x:Class="ZeBusRoute.Pages.TicketsPage"
             Title="Karte">

    <ContentPage.BindingContext>
        <vm:TicketsViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Header -->
        <Grid BackgroundColor="#8BC34A" Padding="20,15">
            <HorizontalStackLayout Spacing="10">
                <Label  
                       FontFamily="FontAwesome" 
                       FontSize="28" 
                       TextColor="White" 
                       VerticalOptions="Center"/>
                <Label Text="Karte" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- tabovi -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" HeightRequest="50">
            <Button Grid.Column="0"
                    Text="KUPI KARTU"
                    BackgroundColor="Transparent"
                    TextColor="{Binding BuyTicketsTabColor}"
                    FontAttributes="Bold"
                    FontSize="14"
                    BorderWidth="0"
                    CornerRadius="0"
                    Command="{Binding ChangeTabCommand}"
                    CommandParameter="0"/>

            <BoxView Grid.Column="0"
                     HeightRequest="3"
                     BackgroundColor="#8BC34A"
                     VerticalOptions="End"
                     IsVisible="{Binding BuyTicketsUnderlineVisible}"/>

            <Button Grid.Column="1"
                    Text="MOJE KARTE"
                    BackgroundColor="Transparent"
                    TextColor="{Binding MyTicketsTabColor}"
                    FontAttributes="Bold"
                    FontSize="14"
                    BorderWidth="0"
                    CornerRadius="0"
                    Command="{Binding ChangeTabCommand}"
                    CommandParameter="1"/>

            <BoxView Grid.Column="1"
                     HeightRequest="3"
                     BackgroundColor="#8BC34A"
                     VerticalOptions="End"
                     IsVisible="{Binding MyTicketsUnderlineVisible}"/>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="2">
            <!-- kupi kartu tab -->
            <ScrollView IsVisible="{Binding IsBuyTicketsTabVisible}"
                        BackgroundColor="#F5F5F5">
                <VerticalStackLayout Padding="20" Spacing="15">
                    <Label Text="Odaberite kartu" 
                           FontSize="18" 
                           TextColor="#757575" 
                           Margin="0,10,0,10"/>

                    <CollectionView ItemsSource="{Binding DostupneKarte}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TicketType">
                                <Frame Padding="20" 
                                       Margin="0,0,0,15" 
                                       BackgroundColor="White" 
                                       CornerRadius="15" 
                                       HasShadow="True">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Ime}" 
                                               FontSize="22" 
                                               FontAttributes="Bold" 
                                               TextColor="#424242"/>

                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding CijenaDisplay}" 
                                               FontSize="18" 
                                               FontAttributes="Bold" 
                                               TextColor="Black" 
                                               BackgroundColor="#FFEB3B" 
                                               Padding="15,8" 
                                               VerticalOptions="Center"
                                               HorizontalOptions="End">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer/>
                                            </Label.GestureRecognizers>
                                        </Label>

                                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding Opis}" 
                                               FontSize="14" 
                                               TextColor="#9E9E9E" 
                                               Margin="0,5,0,15"/>

                                        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                Text="KUPI" 
                                                BackgroundColor="#8BC34A" 
                                                TextColor="White" 
                                                FontAttributes="Bold" 
                                                FontSize="16" 
                                                CornerRadius="25" 
                                                HeightRequest="50"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TicketsViewModel}}, Path=PurchaseTicketCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- quick tips -->
                    <Frame BackgroundColor="#E8F5E9" 
                           Padding="20" 
                           CornerRadius="10" 
                           HasShadow="False"
                           Margin="0,10,0,20">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ’¡ Brzi Savjeti" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#558B2F"/>
                            <Label Text="â€¢ Jednokratne karte vaÅ¾e 30 minuta" 
                                   FontSize="13" 
                                   TextColor="#689F38"/>
                            <Label Text="â€¢ Dnevne karte se aktiviraju prvom upotrebom" 
                                   FontSize="13" 
                                   TextColor="#689F38"/>
                            <Label Text="â€¢ MjeseÄne karte su validne 30 dana" 
                                   FontSize="13" 
                                   TextColor="#689F38"/>
                            <Label Text="â€¢ Sve karte su digitalne, bez fiziÄke kopije" 
                                   FontSize="13" 
                                   TextColor="#689F38"/>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>

            <!-- My Tickets Tab -->
            <ScrollView IsVisible="{Binding IsMyTicketsTabVisible}"
                        BackgroundColor="#F5F5F5">
                <VerticalStackLayout Padding="20" Spacing="20">
                    <CollectionView ItemsSource="{Binding MojeKarte}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:UserTicket">
                                <Frame Padding="20" 
                                       Margin="0,0,0,15" 
                                       BackgroundColor="White" 
                                       CornerRadius="15" 
                                       HasShadow="True">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Type}" 
                                               FontSize="22" 
                                               FontAttributes="Bold" 
                                               TextColor="#424242"/>

                                        <Frame Grid.Row="0" Grid.Column="1"
                                               BackgroundColor="{Binding StatusColor}" 
                                               Padding="12,6" 
                                               CornerRadius="12" 
                                               HasShadow="False"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End">
                                            <Label Text="{Binding StatusDisplay}" 
                                                   FontSize="13" 
                                                   TextColor="White" 
                                                   FontAttributes="Bold"/>
                                        </Frame>

                                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding ValidUntilDisplay}" 
                                               FontSize="14" 
                                               TextColor="#9E9E9E" 
                                               Margin="0,5,0,0"/>

                                        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding TicketId}" 
                                               FontSize="14" 
                                               TextColor="#9E9E9E" 
                                               Margin="0,2,0,15"/>

                                        <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                 HeightRequest="1" 
                                                 BackgroundColor="#E0E0E0" 
                                                 Margin="0,0,0,15"/>

                                        <!-- QR Code Placeholder -->
                                        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                              HeightRequest="200"
                                              WidthRequest="200"
                                              BackgroundColor="White"
                                              HorizontalOptions="Center">
                                            <Image Source="qrcode.png" 
                                                   Aspect="AspectFit"
                                                   HeightRequest="200"
                                                   WidthRequest="200"/>
                                            <!-- For actual QR code, you'll need to use a QR code library like ZXing.Net.Maui -->
                                        </Grid>

                                        <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="PokaÅ¾ite ovaj QR kod vozaÄu" 
                                               FontSize="14" 
                                               TextColor="#9E9E9E" 
                                               HorizontalOptions="Center" 
                                               Margin="0,15,0,0"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>

