<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeBusRoute.Pages.RegisterPage"
             Title="Registracija"
             BackgroundColor="#F7F7F7">
    <ContentPage.Resources>
        <Color x:Key="Zelena">#66BB6A</Color>
        <Style TargetType="Frame" x:Key="Kartica">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="BorderColor" Value="#DDDDDD"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        <Style TargetType="Entry" x:Key="PoljeUnosa">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="#222"/>
        </Style>
        <Style TargetType="Button" x:Key="PrimarnoDugme">
            <Setter Property="BackgroundColor" Value="{StaticResource Zelena}"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>
        <Style TargetType="Button" x:Key="SekundarnoDugme">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="#777"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Frame Style="{StaticResource Kartica}">
            <VerticalStackLayout Spacing="16">
                <Label Text="Sign Up to ZeBusRoute" FontAttributes="Bold" FontSize="18" TextColor="#222"/>

                <!-- Tabs -->
                <Grid ColumnDefinitions="*,*" Padding="0,8">
                    <VerticalStackLayout Grid.Column="0" Spacing="6">
                        <HorizontalStackLayout Spacing="6">
                            <Image Source="email_icon.png" WidthRequest="18" HeightRequest="18"/>
                            <Label Text="Email" TextColor="#333"/>
                        </HorizontalStackLayout>
                        <BoxView x:Name="linijaEmail" HeightRequest="2" BackgroundColor="{StaticResource Zelena}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" Spacing="6">
                        <HorizontalStackLayout Spacing="6">
                            <Image Source="phone_icon.png" WidthRequest="18" HeightRequest="18"/>
                            <Label Text="Phone" TextColor="#333"/>
                        </HorizontalStackLayout>
                        <BoxView x:Name="linijaTelefon" HeightRequest="2" BackgroundColor="#DDDDDD"/>
                    </VerticalStackLayout>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOdabirEmail"/>
                    </Grid.GestureRecognizers>
                </Grid>

                <!-- Email registration -->
                <VerticalStackLayout x:Name="formaEmail" Spacing="12">
                    <Entry x:Name="unosIme" Placeholder="Ime" Style="{StaticResource PoljeUnosa}"/>
                    <Entry x:Name="unosPrezime" Placeholder="Prezime" Style="{StaticResource PoljeUnosa}"/>
                    <Entry x:Name="unosEmail" Placeholder="Email" Keyboard="Email" Style="{StaticResource PoljeUnosa}"/>
                    <Entry x:Name="unosLozinka" Placeholder="Lozinka" IsPassword="True" Style="{StaticResource PoljeUnosa}"/>
                    <Entry x:Name="unosPotvrda" Placeholder="Potvrdi lozinku" IsPassword="True" Style="{StaticResource PoljeUnosa}"/>
                </VerticalStackLayout>

                <!-- Phone registration -->
                <VerticalStackLayout x:Name="formaTelefon" Spacing="12" IsVisible="False">
                    <Entry x:Name="unosTelefon" Placeholder="Phone Number" Keyboard="Telephone" Style="{StaticResource PoljeUnosa}"/>
                    <Entry x:Name="unosKod" Placeholder="Verification Code" Keyboard="Numeric" Style="{StaticResource PoljeUnosa}"/>
                </VerticalStackLayout>

                <Grid ColumnDefinitions="*,Auto">
                    <Button Text="CANCEL" Style="{StaticResource SekundarnoDugme}" Clicked="OnOtkazi"/>
                    <Button Grid.Column="1" Text="SIGN UP" Style="{StaticResource PrimarnoDugme}" Clicked="OnRegistracija"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </ScrollView>
</ContentPage>