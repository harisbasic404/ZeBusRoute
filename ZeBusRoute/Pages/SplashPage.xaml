<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeBusRoute.Pages.SplashPage"
             BackgroundColor="#7CB342"
             NavigationPage.HasNavigationBar="False">
    
    <Grid>
        <VerticalStackLayout 
            HorizontalOptions="Center" 
            VerticalOptions="Center"
            Spacing="30">
            
            <Image Source="zebus_splash.png"
                   WidthRequest="200"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   Opacity="0"
                   x:Name="SlikaLogo"/>
            
            <Label Text="ZeBusRoute"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Opacity="0"
                   x:Name="NaslovLabela"/>
            
            <Label Text="Vaš vodič kroz Zenicu"
                   FontSize="16"
                   TextColor="#E8F5E9"
                   HorizontalOptions="Center"
                   Opacity="0"
                   x:Name="PodnaslovLabela"/>
            
            <ActivityIndicator IsRunning="True"
                             Color="White"
                             HeightRequest="40"
                             Margin="0,20,0,0"
                             x:Name="IndikatorUcitavanja"/>
        </VerticalStackLayout>
        
        <Label Text="v1.0"
               FontSize="12"
               TextColor="#E8F5E9"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20"/>
    </Grid>
</ContentPage>