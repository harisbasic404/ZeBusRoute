<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeBusRoute.Pages.HomePage"
             Title="ZeBusRoute"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*" Padding="0">

        <!-- Header sa Search Bar -->
        <StackLayout Grid.Row="0" BackgroundColor="#7CB342" Padding="20,10">
            <Label Text="ZeBusRoute" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,10,0,15"/>

            <SearchBar x:Name="PretragaLinija"
                       Placeholder="PretraÅ¾ite linije ili stanice..."
                       PlaceholderColor="#B0B0B0"
                       TextColor="#333333"
                       BackgroundColor="White"
                       TextChanged="PriPromjeniTekstaPretrage"/>
        </StackLayout>

        <!-- Lista pretraÅ¾enih linija -->
        <CollectionView Grid.Row="1" 
                        x:Name="KolekcijaLinija"
                        ItemsSource="{Binding FiltriraniRezultati}"
                        SelectionMode="Single"
                        SelectionChanged="PriOdabiruLinije"
                        Margin="15,10">

            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="CenterAndExpand" 
                             HorizontalOptions="CenterAndExpand"
                             Padding="20">
                    <Label Text="PretraÅ¾ite linije ili stanice..." 
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="8"
                           Margin="0,5"
                           Padding="0"
                           HasShadow="True">

                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">

                            <!-- Ikona Bus -->
                            <Frame Grid.Column="0"
                                   BackgroundColor="#7CB342"
                                   CornerRadius="20"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Padding="0"
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Label Text="ðŸšŒ" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Informacije o liniji -->
                            <StackLayout Grid.Column="1" 
                                         Margin="15,0,0,0"
                                         VerticalOptions="Center">
                                <Label Text="{Binding Linija.Id, StringFormat='Linija {0}'}" 
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#333333"/>
                                <Label Text="{Binding Linija.Naziv}" 
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Text="{Binding InfoZaPrikaz}" 
                                       FontSize="12"
                                       TextColor="#888888"/>
                                <Label Text="{Binding DostupniRezimi}" 
                                       FontSize="11"
                                       TextColor="#4CAF50"
                                       FontAttributes="Italic"/>
                            </StackLayout>

                            <!-- Strelica -->
                            <Label Grid.Column="2"
                                   Text="â€º"
                                   FontSize="24"
                                   TextColor="#CCCCCC"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
